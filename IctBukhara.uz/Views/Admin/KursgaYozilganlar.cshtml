@model IEnumerable<SubscriptionKurs>

@{
    ViewData["Page"] = "Kursga Yozilganlar";
}
<style>
    * {
        margin: 0;
        padding: 0;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        font-family: sans-serif;
    }

    body #begin {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        overflow-x: hidden;
        width: 100vw;
        height: 100vh;
    }

        body #begin .cards {
            display: -ms-grid;
            display: grid;
            -ms-grid-columns: auto auto;
            grid-template-columns: auto auto;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            padding: 20px;
            width: 100%;
            height: 100%;
        }

            body #begin .cards .card {
                width: 400px;
                height: 75px;
                margin: 6px 15px;
                padding: 0 15px;
                background: #ffffff;
                -webkit-box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.1);
                box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.1);
                border-radius: 16px;
                display: -webkit-box;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-pack: justify;
                -ms-flex-pack: justify;
                justify-content: space-between;
                -webkit-box-align: center;
                -ms-flex-align: center;
                align-items: center;
            }

                body #begin .cards .card .text h2 {
                    font-size: 20px;
                    color: rgb(59, 52, 45);
                }

                body #begin .cards .card .text h4 {
                    font-size: 15px;
                    font-weight: 80;
                    color: rgb(92, 88, 76);
                }

                body #begin .cards .card .icons a {
                    text-decoration: none;
                    cursor: pointer;
                }

                    body #begin .cards .card .icons a ion-icon {
                        font-size: 20px;
                        color: black;
                    }

                        body #begin .cards .card .icons a ion-icon:hover {
                            color: blue;
                        }

    @@ media screen and (max-width: 890px) {
        body #begin .cards {
            -ms-grid-columns: auto !important;
            grid-template-columns: auto !important;
        }
    }

    @@ media screen and (max-width: 400px) {
        body #begin .cards .card {
            width: 335px !important;
        }
    }

    @@ media screen and (max-width: 340px) {
        body #begin .cards .card {
            width: 285px !important;
            height: 100px;
        }
    }
    /*# sourceMappingURL=admincha.css.map */
</style>
<div id="begin">
    <div class="cards">
        @foreach (var klient in Model)
        {
            <div class="card">
                <div class="text">
                    <h2>@klient.Name</h2>
                    <h4>@klient.KursName</h4>
                    <h2>+998 @klient.Tel</h2>
                    <h5>@klient.Vaqt.ToString("dd/MM/yyyy")</h5>
                </div>
                <div class="icons">
                    <a href="tel:+998 @klient.Tel">
                        <ion-icon name="call-outline"></ion-icon>
                    </a>
                    <a onclick="delKlient('@klient.Name.Replace("\'","`")',@klient.Id)">
                        <ion-icon name="trash-outline"></ion-icon>
                    </a>
                </div>
            </div>
        }
        <script>
            function delKlient(msg, id) {
                var answer = window.confirm("Haqiqatdan ham " + msg + " ni o'chirmoqchimisiz?");
                if (answer) {
                    window.location.href = "/Admin/KursgaYozilgan?id="+id;
                }
                else {
                    console.log(msg + " o'chirilmadi!");
                }
            }
        </script>
    </div>
</div>

<script type="module"
        src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule
        src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
